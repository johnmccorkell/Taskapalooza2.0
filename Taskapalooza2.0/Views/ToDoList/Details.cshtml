@using TaskapaloozaBeta.Models
@model TaskapaloozaBeta.ViewModels.ToDoListDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>TaskList</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.CurrentList.NAME)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentList.NAME)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CurrentList.CREATED)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentList.CREATED)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CurrentList.CLOSED)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentList.CLOSED)
        </dd>
    </dl>
</div>


<dl class="dl-horizontal">
    <dt>
       Tasks on this list       
    </dt>
    @foreach (ToDo item in Model.AssignedToDos)
    {
        <dd>
            @Html.DisplayFor(model => item.NAME)
        </dd>
    }
</dl>

<div>
    <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@Model.CurrentList.ID" class="btn btn-primary">Edit</a>
    <a asp-controller="ToDoList" asp-action="AddTasksToList" asp-route-id="@Model.CurrentList.ID" class="btn btn-success">Add Tasks</a>
    <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@Model.CurrentList.ID" class="btn btn-danger">Delete</a>
    <a asp-controller="ToDoList" asp-action="List" class="btn btn-primary">Back</a>
</div>