@using TaskapaloozaBeta.Models
@model IEnumerable<ToDo>

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<p>
    <a asp-controller="Task" asp-action="Create"  class="btn-xs btn-primary">Create New Task</a>
</p>
<table class="table">
    <thead>
        <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.NAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NOTES)
                </th>               
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>                
                @item.NAME
            </td>
            <td>
               
                @item.NOTES
            </td>            
            <td>
                <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@item.ID" class="btn-sm btn-info">Edit</a> |
                <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@item.ID" class="btn-sm btn-warning">Delete</a>
          </td>
            </tr>    }
        </tbody>
    </table>

    <a asp-controller="ToDo" asp-action="Index" class="btn btn-primary">Back</a>
